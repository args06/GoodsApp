<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.main.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--    Status Section-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/title_status"
            android:textSize="20sp"
            android:textColor="@color/grey800"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <com.example.goodsapp.presentation.reusable.GoodsStatusCard
                android:id="@+id/cardSold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <com.example.goodsapp.presentation.reusable.GoodsStatusCard
                android:id="@+id/cardStock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <com.example.goodsapp.presentation.reusable.GoodsStatusCard
                android:id="@+id/cardExpired"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <com.example.goodsapp.presentation.reusable.GoodsChart
            android:id="@+id/chartStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--    Location Section-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/title_status"
            android:textSize="20sp"
            android:textColor="@color/grey800"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <com.example.goodsapp.presentation.reusable.GoodsStatusCard
                android:id="@+id/cardWarehouse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <com.example.goodsapp.presentation.reusable.GoodsStatusCard
                android:id="@+id/cardSalesRack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <com.example.goodsapp.presentation.reusable.GoodsChart
            android:id="@+id/chartLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>